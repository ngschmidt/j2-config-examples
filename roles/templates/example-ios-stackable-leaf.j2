 ipv6 address {{ ipv6.prefix }}:{{ spine.two }}::{{ ipv6.uplink }}/126
 ipv6 enable
 ipv6 ospf 1 area 0
!
interface GigabitEthernet1/0/1
!
interface GigabitEthernet1/0/2
!
interface Vlan1
 no ip address
!
router isis {{ isis.instancename }}
 net {{ isis.net }}
 is-type level-2-only
 ispf level-2
 log-adjacency-changes
!
router bgp {{ bgp.localasn }}
 bgp log-neighbor-changes
 neighbor {{ ip.spine.one }} remote-as {{ bgp.localasn }}
 neighbor {{ ip.spine.one }} update-source Loopback0
 neighbor {{ ip.spine.two }} remote-as {{ bgp.localasn }}
 neighbor {{ ip.spine.two }} update-source Loopback0
 neighbor {{ ipv6.spine.one }} remote-as {{ bgp.localasn }}
 neighbor {{ ipv6.spine.one }} update-source Loopback0
 neighbor {{ ipv6.spine.two }} remote-as {{ bgp.localasn }}
 neighbor {{ ipv6.spine.two }} update-source Loopback0
 maximum-paths 2
 !
 address-family ipv4
  neighbor {{ ip.spine.one }} activate
  neighbor {{ ip.spine.two }} activate
  neighbor {{ ipv6.spine.one }} activate
  neighbor {{ ipv6.spine.two }} activate
  maximum-paths 2
  no auto-summary
  no synchronization
  network {{ ip.spine.one }} mask 255.255.255.240

 exit-address-family
 !
 address-family ipv6
  neighbor {{ ipv6.spine.one }} activate
  neighbor {{ ipv6.spine.two }} activate
  network {{ ipv6.spine.one }}/124
  maximum-paths 2
 exit-address-family
!
ip classless
no ip http server
no ip http secure-server
!
!
ipv6 router ospf 1
 router-id {{ ip.prefix }}.0.{{ global.switchid }}
 log-adjacency-changes
 maximum-paths 4
!
